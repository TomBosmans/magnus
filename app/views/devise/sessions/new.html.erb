<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>
  <!-- Title -->
  <div class="row">
    <div class="input-field col s12 center">
      <h5 class="authentication-title">Sign In</h5>
    </div>
  </div>

  <!-- Email -->
  <div class="row margin">
    <div class="input-field col s12">
      <i class="material-icons prefix pt-5">person_outline</i>
      <%= form.email_field :email, autofocus: true, autocomplete: "email" %>
      <%= form.label :email %>
    </div>
  </div>

  <!-- Password -->
  <div class="row margin">
    <div class="input-field col s12">
      <i class="material-icons prefix pt-5">lock_outline</i>
      <%= form.password_field :password, autocomplete: "off" %>
      <%= form.label :password %>
    </div>
  </div>

  <div class="row">
    <!-- Submit -->
    <div class="input-field col s12">
      <button class="btn waves-effect waves-light col s12" type="submit" name="action">
	<%= t('actions.login') %>
      </button>
    </div>

    <!-- Remember me -->
    <% if devise_mapping.rememberable? -%>
      <div class="col s12 m12 l12 ml-2 mt-3">
	<label for="user_remember_me">
	  <%= form.check_box :remember_me %>
	  <span><%= form.object.class.human_attribute_name(:remember_me) %></span>
	</label>
      </div
    <% end %>
  </div>
  
  <div class="row">
    <div class="col s12 m12 l12 ml-2 mt-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>








